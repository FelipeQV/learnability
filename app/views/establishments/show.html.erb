<h1>Establishments#show</h1>
<p>Find me in app/views/establishments/show.html.erb</p>

<div class = "text-center">


<ul class = "list-unstyled">
<li><%= @establishment.name %></li>
<li><%= @establishment.city %></li>
<li><%= @establishment.street %></li>
<li><%= @establishment.description %></li>
</ul>


<%= link_to "new", new_establishment_path(@user) %>
<%= link_to "edit", edit_establishment_path(@establishment) %>
<%= link_to "destroy", @establishment, method: :delete %>


<br>
<br>
<%= link_to "Create course", new_establishment_course_path(@establishment)%>
<br>

  <% @establishment.courses.each do |course| %>
  <div>
    <%= course.title %>
    <%= link_to "Edit course", edit_course_path(course)%>
    <%= link_to "Destroy course", course, method: :delete %>
  </div>
  <% end %>


<%= link_to "Back", :back %>
