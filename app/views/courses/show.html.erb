      <div class="container">
        <div class="row">

<%= render partial: "show-info" %>

          <div style="margin:10px;" class="col-md-8" >

            <h3 style="margin:10px;"> Reviews</h3>

            <% if @reviews.empty? %>
            <p class=" fa fa-frown-o">No review for this course yet</p>
            <% else %>

            <% @reviews.first(4).each do |review|%>
            <div class="review-card">

              <div class="left">
                <strong>
                 <%=review.appointment.user.fullname%>
               </strong>
               <div class="review-star" data-score="<%=review.stars %>"></div>
               <div>
                 <%=review.created_at.strftime("%m-%d-%Y")%>
               </div>
             </div>

             <div class="right line-height">
               <%=review.content%>
             </div>
           </div>
           <% end%>
           <% end  %>
         </div>

         <div style="margin:10px;" class="col-md-8">
          <div id="map" style="width: 100%; height: 400px; margin-top: 50px; margin-bottom: 50px; "></div>
          <% content_for(:after_js) do %>
          <%= javascript_tag do %>
          $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' },  provider:{ scrollwheel: false } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();

          if (markers.length === 0) {
          handler.getMap().setZoom(14);
        } else if (markers.length === 1) {
        handler.getMap().setZoom(16);
      }
    });
  });
  <% end %>


  <script>
    $(document).ready(function () {
     $('.review-star').raty({
      path: '/assets/',

      // scoreName: 'review[stars]'
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      },
    });
   });
 </script>
 <% end %>
</div>

</div>
</div>









