<br>
<div class = "text-center">
  <h2><%= "Create a review for"%> <strong><%=@appointment.course.title%></h2></strong>
</div>

<div class = "container">

  <div class = "row-box">
   <div class="form-box">

    <div class = "col-md-offset-4">
      <%= simple_form_for [@appointment, @review ] do |f| %>
      <% f.error_notification %>
      <%= f.input :content %>

      <div id="rating-form"></div>

      <%= f.button :submit, class: "btn btn-primary" %>
      <%end%>

    </div>
  </div>
</div>
<br>



<% content_for(:after_js) do %>

</div>
<script>

  $(document).ready(function () {
   $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[stars]'
  });
 });
</script>


<% end %>




