    <% end  %>

<div class = "text-center">
  <h1>Courses</h1>
  <ul class = "list-unstyled">

<%if params[:search_value] != nil  %>

  <% @courses.each do |course|%>
    <li>
      <%=link_to course_path(course[:searchable_id]) do%>
        <%= course.content %>
      <%end%>
      <%end%>
    </li>

</ul>


<%else  %>

<% @courses.each do |course|%>
    <li>
      <%=link_to course_path(course) do%>
        <%= course.title %>
      <%end%>
      <%end%>
    </li>

</ul>


<%end  %>
