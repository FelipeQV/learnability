<div class = "container">
  <h1>Explore courses</h1>

<%if params[:search_value] != nil  %>


<div id="map" style="width: 50%; height: 300px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>




  <% @courses_value.each do |course|%>
  <% course_id = course[:searchable_id]%>
  <%result = @courses.find(course_id)  %>
  <%=link_to course_path(course_id) do%>
  <%= render "shared/card", course: result %>
  <%end%>
  <%end%>
  <br>

  <%else  %>

  <% @courses.each do |course|%>
  <%=link_to course_path(course) do%>
  <%= render "shared/card", course: course %>
  <%end%>
  <%end%>
  <br>

  <%end%>

</div>

<div id="map"></div>









<div class = "container">
  <h1>Explore categories</h1>
  <% @categories.each do |cat| %>
