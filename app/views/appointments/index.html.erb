


<div class = "text-center">
<h1>Appointments</h1>


<% @appointments.each_with_index do |appointment, index| %>
  <%= index + 1 %>
  <ul class = "list-unstyled">
    <li> <strong><%= appointment.course.title%></strong></li>
    <li><%= appointment.description %></li>
    <li> <%= link_to "Review", new_appointment_review_path(appointment)  %></li>
  </ul>

<%end%>



